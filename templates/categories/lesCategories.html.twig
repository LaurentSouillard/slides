{% extends 'layout.html.twig' %}

{% block title %}Catégories{% endblock %}

{% block content %}

<div class="container-fluid p-1">
    <h1 class="heading-1 text-center m-5">Catégories</h1>

        <div class="d-flex justify-content-center text-center pb-5">
            <div class="row ms-3">
                {% if categories is empty %}

                <div class="alert alert-danger">
                    <p>Pas de catégorie pour le moment, merci d'en ajouter s'il vous plaît...</p>
                </div>

                {% else %}

                    {% for categorie in categories %}
            
                    <div class="card m-1 border border-info" style="width: 18rem;">
                        <div class="card-body">
                                <h5 class="card-title">{{ categorie.titre }} | n°{{ categorie.id }}</h5>
                            <div class="d-flex justify-content-center align-items-center mt-3">
                                {#<a href="{{ path('app_theme_show', {id: theme.id}) }}"><button class="btn btn-sm p-1"><i class="fas fa-eye mx-1 text-primary" title="voir"></i></button></a>#}
                                <a href="{{ path('app_categorie', {id: categorie.id}) }}" target="_blank"><button class="btn btn-sm p-1"><i class="fa-solid fa-circle-play mx-1 text-info" title="SlideShow"></i></button></a>
                                <a href=" {{ path('app_categorie_update', {id: categorie.id}) }} "><button class="btn btn-sm p-1"><i class="fas fa-edit mx-1 text-success" title="modifier"></i></button></a>
                                <a href=" {{ path('app_categorie_delete', {id: categorie.id}) }} "><button class="btn btn-sm p-1"><i class="fas fa-trash mx-1 text-danger" title="supprimer"
                                onclick=" return confirm('Voulez-vous vraiment supprimer cette catégorie ?') "></i></button></a>
                            </div>
                        </div>
                    </div>
            

                    {% endfor %}

                {% endif %}
            </div>
        </div>
</div>

{% endblock %}